pipeline {
    agent any

    stages {
         stage('Clone Code') {
            steps {
                git branch: 'main', url: 'https://github.com/prakashbhati086/aws.git'
            }
            }

        stage('Install Dependencies') {
            steps {
                dir('flask-backend') {
                    sh 'pip3 install -r requirements.txt'
                }
            }
        }

        stage('Restart App') {
            steps {
                dir('flask-backend') {
                    sh 'pm2 restart flask-app || pm2 start app.py --name flask-app'
                }
            }
        }
    }
}
